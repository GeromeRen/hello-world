pipeline {
  agent any
  stages {
    stage('Checkout') {
      steps {
        git 'https://github.com/GeromeRen/hello-world.git'
      }
    }

    stage('Build') {
      steps {
        sh """
        /opt/maven/bin/mvn --version
        /opt/maven/bin/mvn clean install
        """.stripIndent()

        build job: 'RegApp_CD_Job'
      }
    }
  }

}
