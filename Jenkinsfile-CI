pipeline {
  agent any
  stages {
    stage('Checkout') {
      steps {
        git 'https://github.com/GeromeRen/hello-world.git'
      }
    }

    stage('Build') {
      steps {
        sh """
        ssh somewhere <<EOF
        /opt/maven/bin/mvn --version
        /opt/maven/bin/clean install
        EOF
        """.stripIndent()
      }
    }
  }

}
